.authform
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    %h3 #{resource.role.capitalize} sign up
    = devise_error_messages!
    = f.hidden_field :role
    .form-inputs
      =f.input :name, autofocus: true
      =f.input :last_name if resource.admin?
      =f.input :email
      =f.input :password
      =f.input :password_confirmation
      =f.input :shop_name if resource.owner?
      .form-group
        =f.attachment_field :avatar if resource.admin?
      .form-group
        =f.attachment_field :passport_photo if resource.admin?
    .form-actions
      = f.button :submit, 'Sing Up'
